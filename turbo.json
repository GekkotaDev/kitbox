{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build", "test"],
			"outputs": ["build-isolation/**", "build/**"]
		},

		"build:native": {
			"dependsOn": ["test", "^build:native"],
			"outputs": ["build-isolation/**", "build/**"]
		},

		"dev": {
			"cache": false,
			"interactive": true,
			"persistent": true
		},

		"dev:native": {
			"cache": false,
			"interactive": true,
			"persistent": true
		},

		"format": {},

		"lint": {},

		"test": {
			"dependsOn": ["lint"]
		}
	}
}
