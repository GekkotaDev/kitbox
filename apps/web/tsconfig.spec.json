{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"types": [
			"vitest/globals",
			"vitest/jsdom",
			"@vitest/browser/providers/playwright",
			"@testing-library/jest-dom"
		]
	},

	"include": [
		"ambient.d.ts",
		"non-ambient.d.ts",
		".svelte-kit/types/**/$types.d.ts",
		"vite.config.js",
		"vite.config.ts",
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.svelte",
		"src/**/*.spec.js",
		"src/**/*.spec.ts",
		"src/**/*.test-d.js",
		"src/**/*.test-d.ts"
	]
}
