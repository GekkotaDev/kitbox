{
	"compilerOptions": {
		"moduleDetection": "force",
		"resolveJsonModule": true,
		"target": "ESNext",
		"skipLibCheck": true,
		"verbatimModuleSyntax": true,

		"strict": true,
		"alwaysStrict": true,
		"noUncheckedIndexedAccess": true,

		"moduleResolution": "Bundler",
		"module": "ESNext",
		"noEmit": true,

		"lib": ["ESNext"],

		"types": ["vitest/globals"]
	}
}
